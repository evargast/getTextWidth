{
    "compilerOptions": {
        "declaration": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "module": "commonjs",
        "moduleResolution": "Node",
        "outDir": "./lib",
        "resolveJsonModule": true,
        "strict": true,
        "target": "ES6"
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ]
}